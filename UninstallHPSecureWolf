#The following script uninstalls HP secure wolf & Sure apps from windows installer MSI files.
#Re-run the script untill all apps have been removed. 

#HPSureRun
$appPath = "c:\windows\installer\a88ea.msi"
if (Test-Path $appPath) {
    Write-Host "Uninstalling HPSureRun..."
    msiexec.exe /x "$appPath"
} else {
    Write-Host "HPSureRun is not installed. Skipping..."
}

#HPSureRecovery
$appPath = "c:\windows\installer\a5a96.msi"
if (Test-Path $appPath) {
    Write-Host "Uninstalling HPSureRecovery..."
    msiexec.exe /x "$appPath"
} else {
    Write-Host "HPSureRecovery is not installed. Skipping..."
}

#HP Wolf Security
$appPath = "C:\Windows\Installer\b49f8.msi"
if (Test-Path $appPath) {
    Write-Host "Uninstalling HP Wolf Security..."
    msiexec.exe /x "$appPath"
} else {
    Write-Host "HP Wolf Security is not installed. Skipping..."
}

#HP Wolf Security - Console 
$appPath = "c:\windows\installer\ae6f8.msi"
if (Test-Path $appPath) {
    Write-Host "Uninstalling HP Wolf Security - Console..."
    msiexec.exe /x "$appPath"
} else {
    Write-Host "HP Wolf Security - Console is not installed. Skipping..."
}
